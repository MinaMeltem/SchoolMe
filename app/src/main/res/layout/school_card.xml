<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/school_pic"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_home_black_24dp" />

        <TextView
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignBottom="@+id/school_pic"
            android:layout_alignParentStart="true"
            android:background="@drawable/gradient"
            android:gravity="bottom"
            android:text="Springfield High School"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/school_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_name"
            android:text="New York, NY"
            android:textSize="20sp" />


        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/school_enrolled_students"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_location"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="550"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students"
                android:textSize="10sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/school_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_enrolled_students"
            android:paddingTop="10dp"
            android:text="School description. School description.School description.School description.School description.School description.School description.School description. "
            android:textSize="15sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>